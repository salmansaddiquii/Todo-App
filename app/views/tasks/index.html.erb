<div class="container mt-5">
  <h1 class="text-center mb-4">Your Tasks</h1>

  <div class="row justify-content-center mb-4">
    <div class="col-md-8">
      <%= form_with url: tasks_path, method: :get, local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Search by title" %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :category, class: "form-label" %>
          <%= form.select :category, Task.categories.keys.map { |key| [Task.categories[key], key] }, { include_blank: true }, class: "form-control" %>
        </div>
        <div class="form-group mb-3 form-check">
          <%= form.check_box :completed, class: "form--check-input", id: 'completed_checkbox' %>
          <%= form.label :completed, 'Completed', class: "form-check-label", for: 'completed_checkbox' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :due_date, class: "form-label" %>
          <%= form.date_select :due_date, class: "form-control" %>
        </div>

        <%= form.submit 'Filter', class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div id="tasks" class="mt-4">
    <%= render @tasks %>
  </div>

  <div class="text-center mt-4">
    <%= link_to 'New Task', new_task_path, class: 'btn btn-success mb-5' %>
  </div>
</div>
